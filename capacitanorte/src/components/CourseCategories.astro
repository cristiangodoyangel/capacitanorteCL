---
const categories = [
    { name: 'Maquinaria Pesada', color: 'bg-yellow-500', icon: 'M' },
    { name: 'Seguridad', color: 'bg-red-500', icon: 'S' },
    { name: 'Computación', color: 'bg-blue-500', icon: 'C' },
    { name: 'Desarrollo', color: 'bg-green-500', icon: 'D' },
    { name: 'Minería', color: 'bg-purple-500', icon: 'P' },
];
---
<section class="py-16 bg-white border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-10">Áreas de Capacitación</h2>
        
        <div class="flex flex-wrap justify-center gap-8 md:gap-16">
            {categories.map(cat => (
                <div class="flex flex-col items-center group cursor-pointer">
                    <div class={`w-16 h-16 ${cat.color} rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg transform group-hover:scale-110 transition duration-300 mb-3`}>
                        {cat.icon}
                    </div>
                    <span class="text-sm font-medium text-gray-600 group-hover:text-[#7c629f] transition-colors">{cat.name}</span>
                </div>
            ))}
        </div>
    </div>
</section>
