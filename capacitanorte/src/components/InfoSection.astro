        <h2 class="text-4xl font-bold text-center mb-16 text-black">Nosotros</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Presentación -->
            <div class="text-center group">
                <div class="overflow-hidden rounded-lg shadow-lg mb-6">
