<section class="relative w-full h-[80vh] min-h-[800px] flex items-center justify-start overflow-hidden" id="inicio">
    <!-- Background Image with Filter -->
    <div class="absolute inset-0 z-0">
        <img 
            src="/capacitanorte.jpg" 
            alt="Capacitación Profesional" 
            class="w-full h-full object-cover"
        />
        <!-- Black overlay filter -->
        <div class="absolute inset-0 bg-black/70"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-white pt-20">
        <div class="max-w-3xl">
            <span class="text-[#099696] font-bold tracking-wider uppercase mb-2 block animate-fade-in">
                Capacitanorte
            </span>
            <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6 animate-slide-up">
                Impulsa tu carrera con <span class="text-[#099696]">Capacitación de Calidad</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-200 mb-10 max-w-2xl animate-slide-up-delay">
                Desarrollo de competencias laborales y formación de capital humano en minería, industria y tecnología.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 animate-slide-up-delay-2">
                <a href="#cursos" class="bg-[#7c629f] hover:bg-[#6a548b] text-white px-8 py-4 rounded-full font-bold text-center transition-all shadow-lg hover:shadow-xl hover:-translate-y-1">
                    Ver Cursos Disponibles
                </a>
                <a href="#contacto" class="bg-transparent border-2 border-white text-white hover:bg-white hover:text-[#7c629f] px-8 py-4 rounded-full font-bold text-center transition-all">
                    Contáctanos
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Simple animations */
    .animate-fade-in { animation: fadeIn 1s ease-out; }
    .animate-slide-up { animation: slideUp 0.8s ease-out forwards; opacity: 0; transform: translateY(20px); }
    .animate-slide-up-delay { animation: slideUp 0.8s ease-out 0.2s forwards; opacity: 0; transform: translateY(20px); }
    .animate-slide-up-delay-2 { animation: slideUp 0.8s ease-out 0.4s forwards; opacity: 0; transform: translateY(20px); }

    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @keyframes slideUp { to { opacity: 1; transform: translateY(0); } }
</style>
