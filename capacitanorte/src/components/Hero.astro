<section class="relative w-full h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Overlay Gradient to ensure text readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent z-10"></div>
    
    <!-- Hero Image -->
    <img 
        src="/hero.png" 
        alt="Equipo profesional" 
        class="absolute inset-0 w-full h-full object-cover"
    />

    <!-- Content -->
    <div class="relative z-20 text-center text-white px-4">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-lg">
            Tus conocimientos comienzan aquí
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto drop-shadow-md">
            Capacitación profesional de alto nivel para impulsar tu carrera.
        </p>
        <a href="#" class="inline-block bg-teal-500 hover:bg-teal-600 text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105 shadow-lg">
            Contáctenos
        </a>
    </div>
</section>
